@model TuFactoringModels.nuevaVersion.Dashboard

@if (Model.Count > 0)
{
    <div class="row">
    @foreach (var Widget in Model.list)
    {
        @foreach (var Item in Widget.Items)
        {
            <div class="col-xl-3 col-md-3 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@Localizer.Text(Item.Abbreviation)</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @String.Format("{0:#,##0.00}", Item.Value)
                                    @if (Item.Count > 0)
                                    {
                                        <span class="badge badge-pill badge-success">@Item.Count</span>
                                    }
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="@Item.Icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    </div>
}
