@model TuFactoringModels.nuevaVersion.Dashboard

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var Widget in Model.list)
        {
            <!-- Content Row -->
            @if (Widget.Content == "COUNTER")
            {
                <div class="col-xl-3 col-md-3 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">@Localizer.Text(Widget.Abbreviation)</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Widget.Count</div>
                                </div>
                                <div class="col-auto">
                                    <i class="@Widget.Icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Widget.Content == "AMOUNT")
            {
                <div class="col-xl-3 col-md-3 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="font-weight-bold text-success text-uppercase mb-1">
                                        <span class="text-xs ">@Localizer.Text(Widget.Abbreviation)</span>
                                        &nbsp;
                                        @if (Widget.Count > 0)
                                        {
                                            <span class="text-right badge badge-pill badge-success">@Widget.Count</span>
                                        }
                                    </div>

                                    <div class="h6 font-weight-bold text-gray-800">
                                        @if (Widget.Currency != null)
                                        {
                                            @if (Widget.Currency != null && Widget.Currency.Id != null)
                                            {
                                                @Widget.Currency.Symbol
                                                <span>&nbsp;</span>
                                                @String.Format("{0:#,##0.00}", Widget.Value)
                                                <span class="badge bg-gray-200">
                                                    @Widget.Currency.Iso_4217
                                                </span>
                                            }
                                        }

                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="@Widget.Icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Widget.Content == "ACTIVITY")
            {
                <div class="col-xl-3 col-md-3 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">@Localizer.Text(Widget.Abbreviation)</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Widget.Count</div>
                                </div>
                                <div class="col-auto">
                                    <i class="@Widget.Icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
